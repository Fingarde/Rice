apt-get remove nvidia*
apt autoremove

apt-get install dkms build-essential linux-headers-generic

if cat /etc/modprobe.d/blacklist.conf 2> /dev/null | grep "blacklist nouveau" > /dev/null; then
    echo "blacklist nouveau
blacklist lbm-nouveau
options nouveau modeset=0
alias nouveau off
alias lbm-nouveau off" >> /etc/modprobe.d/blacklist.conf

    echo "options nouveau modeset=0" | tee -a /etc/modprobe.d/nouveau-kms.conf > /dev/null

    update-initramfs -u

    apt install -y nvidia-driver
fi

